	AREA RESET,DATA,READONLY
	EXPORT __Vectors
__Vectors
	DCD 0X40001000
	DCD Reset_Handler
	ALIGN
	AREA MYCODE,CODE,READONLY
	ENTRY
	EXPORT Reset_Handler
Reset_Handler
	LDR R0,=NUMS 
	MOV R1,#N - 1
OUTERLOOP
	MOV R2,R1
	MOV R3,R0
INNERLOOP
	LDR R4,[R3]
	LDR R5,[R3,#4]
	CMP R4,R5
	
	STRHI R4,[R3,#4]
	STRHI R5,[R3]
	ADD R3,#4
	SUBS R2,#1
	BNE INNERLOOP
	
	SUBS R1,#1
	BNE OUTERLOOP
STOP B STOP

	AREA MYDATA,DATA,READWRITE
NUMS DCD 0X99,0X12,0X02,0X12,0X25,0X11,0X47,0X85
N EQU 8
	END
		
